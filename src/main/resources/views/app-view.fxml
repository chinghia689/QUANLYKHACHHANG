<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.customer.controller.AppController"
            prefHeight="700.0" prefWidth="1200.0"
            styleClass="root">

    <!-- Left Sidebar -->
    <left>
        <VBox styleClass="sidebar" fx:id="sidebar">
            <!-- Logo/Header -->
            <HBox styleClass="sidebar-header" alignment="CENTER_LEFT" spacing="10">
                <Label text="CRM" styleClass="sidebar-logo"/>
                <VBox alignment="CENTER_LEFT">
                    <Label text="Customer Mgmt" styleClass="sidebar-logo" style="-fx-font-size: 14px;"/>
                    <Label text="System" styleClass="sidebar-subtitle"/>
                </VBox>
            </HBox>

            <!-- Navigation Menu -->
            <VBox spacing="0" VBox.vgrow="ALWAYS">
                <padding>
                    <Insets top="15"/>
                </padding>

                <!-- Dashboard Menu Item -->
                <HBox fx:id="menuDashboard" styleClass="sidebar-item, selected"
                      onMouseClicked="#handleMenuDashboard" alignment="CENTER_LEFT">
                    <Label text="ðŸ“Š" styleClass="sidebar-icon"/>
                    <Label text="Dashboard"/>
                </HBox>

                <!-- Customers Menu Item -->
                <HBox fx:id="menuCustomers" styleClass="sidebar-item"
                      onMouseClicked="#handleMenuCustomers" alignment="CENTER_LEFT">
                    <Label text="ðŸ‘¥" styleClass="sidebar-icon"/>
                    <Label text="Customers"/>
                </HBox>

                <!-- Accounts Menu Item -->
                <HBox fx:id="menuAccounts" styleClass="sidebar-item"
                      onMouseClicked="#handleMenuAccounts" alignment="CENTER_LEFT">
                    <Label text="ðŸ¦" styleClass="sidebar-icon"/>
                    <Label text="Accounts"/>
                </HBox>

                <!-- Users Menu Item (Admin only) -->
                <HBox fx:id="menuUsers" styleClass="sidebar-item"
                      onMouseClicked="#handleMenuUsers" alignment="CENTER_LEFT" visible="false" managed="false">
                    <Label text="ðŸ‘¤" styleClass="sidebar-icon"/>
                    <Label text="Users"/>
                </HBox>
            </VBox>

            <!-- Bottom Section - Theme Toggle & User Info -->
            <VBox alignment="CENTER" spacing="10">
                <padding>
                    <Insets bottom="20" top="20" left="10" right="10"/>
                </padding>

                <Button fx:id="themeToggleBtn" text="ðŸŒ™ Dark"
                        onAction="#handleThemeToggle" styleClass="theme-toggle"/>

                <Separator prefWidth="200.0" />

                <VBox alignment="CENTER" spacing="2">
                    <Label fx:id="userNameLabel" text="User Name" styleClass="user-name-label"/>
                    <Label fx:id="userRoleLabel" text="Role" styleClass="user-role-label"/>
                </VBox>

                <VBox alignment="CENTER" spacing="5">
                    <Button text="Change Password" onAction="#handleChangePassword" styleClass="text-button"/>
                    <Button text="Logout" onAction="#handleLogout" styleClass="text-button, danger-text"/>
                </VBox>
            </VBox>
        </VBox>
    </left>

    <!-- Main Content Area -->
    <center>
        <StackPane fx:id="contentArea" styleClass="content-area">
            <!-- Content will be loaded here dynamically -->
        </StackPane>
    </center>

</BorderPane>
