<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.customer.controller.UserController">
    <top>
        <VBox spacing="10.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <Text text="User Management">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                </Text>
            </HBox>
            <ToolBar prefHeight="40.0" prefWidth="200.0">
                <items>
                    <Button fx:id="addButton" mnemonicParsing="false" onAction="#handleAdd" text="Add New" />
                    <Button fx:id="editButton" mnemonicParsing="false" onAction="#handleEdit" text="Edit" />
                    <Button fx:id="lockButton" mnemonicParsing="false" onAction="#handleLock" text="Lock" />
                    <Button fx:id="unlockButton" mnemonicParsing="false" onAction="#handleUnlock" text="Unlock" />
                    <Button fx:id="resetPasswordButton" mnemonicParsing="false" onAction="#handleResetPassword" text="Reset Password" />
                    <Button fx:id="refreshButton" mnemonicParsing="false" onAction="#handleRefresh" text="Refresh" />
                </items>
            </ToolBar>
        </VBox>
    </top>
    <center>
        <TableView fx:id="userTable" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="50.0" text="ID" />
                <TableColumn fx:id="usernameColumn" prefWidth="120.0" text="Username" />
                <TableColumn fx:id="fullNameColumn" prefWidth="200.0" text="Full Name" />
                <TableColumn fx:id="emailColumn" prefWidth="200.0" text="Email" />
                <TableColumn fx:id="roleColumn" prefWidth="100.0" text="Role" />
                <TableColumn fx:id="statusColumn" prefWidth="100.0" text="Status" />
                <TableColumn fx:id="lastLoginColumn" prefWidth="150.0" text="Last Login" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </center>
</BorderPane>
