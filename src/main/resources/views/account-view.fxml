<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.customer.controller.AccountController"
      spacing="0" styleClass="content-area">

    <!-- Page Header -->
    <HBox styleClass="page-header" alignment="CENTER_LEFT">
        <Label text="ðŸ¦ Accounts" styleClass="page-title"/>
    </HBox>

    <!-- Search and Filter Bar -->
    <HBox spacing="15" alignment="CENTER_LEFT" styleClass="toolbar">
        <padding>
            <Insets top="10" right="30" bottom="10" left="30"/>
        </padding>

        <Label text="Search:" styleClass="section-label"/>
        <TextField fx:id="searchField" promptText="Search by account number or customer name..."
                   prefWidth="300" HBox.hgrow="ALWAYS"/>

        <Label text="Type:" styleClass="section-label"/>
        <ComboBox fx:id="typeFilter" prefWidth="130"/>

        <Label text="Status:" styleClass="section-label"/>
        <ComboBox fx:id="statusFilter" prefWidth="130"/>

        <Region HBox.hgrow="ALWAYS"/>

        <Button fx:id="refreshButton" text="ðŸ”„" onAction="#handleRefresh"
                styleClass="secondary-button" style="-fx-padding: 10px 15px;"/>
    </HBox>

    <!-- Table Content -->
    <VBox VBox.vgrow="ALWAYS">
        <padding>
            <Insets top="10" right="30" bottom="10" left="30"/>
        </padding>

        <!-- Account Table -->
        <StackPane VBox.vgrow="ALWAYS">
            <TableView fx:id="accountTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="accountNumberColumn" text="Account Number" prefWidth="150"/>
                    <TableColumn fx:id="customerNameColumn" text="Customer Name" prefWidth="180"/>
                    <TableColumn fx:id="typeColumn" text="Type" prefWidth="100"/>
                    <TableColumn fx:id="balanceColumn" text="Balance" prefWidth="150" style="-fx-alignment: CENTER-RIGHT;"/>
                    <TableColumn fx:id="interestRateColumn" text="Interest Rate" prefWidth="100" style="-fx-alignment: CENTER-RIGHT;"/>
                    <TableColumn fx:id="statusColumn" text="Status" prefWidth="100"/>
                    <TableColumn fx:id="createdDateColumn" text="Created Date" prefWidth="150"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>

            <!-- Loading Overlay -->
            <StackPane fx:id="loadingOverlay" styleClass="loading-overlay"
                       visible="false" managed="false">
                <ProgressIndicator styleClass="loading-spinner" maxWidth="50" maxHeight="50"/>
            </StackPane>
        </StackPane>
    </VBox>

    <!-- Bottom Action Bar -->
    <HBox spacing="15" alignment="CENTER" styleClass="toolbar">
        <padding>
            <Insets top="15" right="30" bottom="20" left="30"/>
        </padding>

        <Button fx:id="openAccountButton" text="âž• Open Account" onAction="#handleOpenAccount"
                styleClass="success-button" prefWidth="160"/>

        <Button fx:id="viewDetailsButton" text="ðŸ‘ï¸ View Details" onAction="#handleViewDetails"
                styleClass="primary-button" prefWidth="150"/>

        <Button fx:id="freezeUnfreezeButton" text="â„ï¸ Freeze" onAction="#handleFreezeUnfreeze"
                styleClass="warning-button" prefWidth="140"/>

        <Button fx:id="closeAccountButton" text="âŒ Close Account" onAction="#handleCloseAccount"
                styleClass="danger-button" prefWidth="160"/>
    </HBox>

</VBox>
