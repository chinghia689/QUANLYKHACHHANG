<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.customer.controller.CustomerController"
      spacing="0" styleClass="content-area">

    <!-- Page Header -->
    <HBox styleClass="page-header" alignment="CENTER_LEFT">
        <Label text="ðŸ‘¥ Customers" styleClass="page-title"/>
    </HBox>

    <!-- Search and Filter Bar -->
    <HBox spacing="15" alignment="CENTER_LEFT" styleClass="toolbar">
        <padding>
            <Insets top="10" right="30" bottom="10" left="30"/>
        </padding>

        <Label text="Search:" styleClass="section-label"/>
        <TextField fx:id="searchField" promptText="Search by name, phone, email..."
                   prefWidth="300" HBox.hgrow="ALWAYS"/>

        <Label text="Filter:" styleClass="section-label"/>
        <ComboBox fx:id="filterComboBox" prefWidth="150"/>

        <Region HBox.hgrow="ALWAYS"/>

        <Button fx:id="refreshButton" text="ðŸ”„" onAction="#handleRefresh"
                styleClass="secondary-button" style="-fx-padding: 10px 15px;"/>
    </HBox>

    <!-- Table Content -->
    <VBox VBox.vgrow="ALWAYS">
        <padding>
            <Insets top="10" right="30" bottom="10" left="30"/>
        </padding>

        <!-- Customer Table -->
        <StackPane VBox.vgrow="ALWAYS">
            <TableView fx:id="customerTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="avatarColumn" text="" prefWidth="60" sortable="false"/>
                    <TableColumn fx:id="nameColumn" text="Full Name" prefWidth="180"/>
                    <TableColumn fx:id="phoneColumn" text="Phone Number" prefWidth="130"/>
                    <TableColumn fx:id="emailColumn" text="Email" prefWidth="200"/>
                    <TableColumn fx:id="addressColumn" text="Address" prefWidth="220"/>
                    <TableColumn fx:id="typeColumn" text="Type" prefWidth="100"/>
                    <TableColumn fx:id="dobColumn" text="Birthday" prefWidth="110"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>

            <!-- Loading Overlay -->
            <StackPane fx:id="loadingOverlay" styleClass="loading-overlay"
                       visible="false" managed="false">
                <ProgressIndicator styleClass="loading-spinner" maxWidth="50" maxHeight="50"/>
            </StackPane>
        </StackPane>
    </VBox>

    <!-- Bottom Action Bar -->
    <HBox spacing="15" alignment="CENTER" styleClass="toolbar">
        <padding>
            <Insets top="15" right="30" bottom="20" left="30"/>
        </padding>

        <Button fx:id="addButton" text="âž• Add New" onAction="#handleAdd"
                styleClass="success-button" prefWidth="150"/>
        <Button fx:id="editButton" text="âœï¸ Edit" onAction="#handleEdit"
                styleClass="primary-button" prefWidth="130"/>
        <Button fx:id="deleteButton" text="ðŸ—‘ï¸ Delete" onAction="#handleDelete"
                styleClass="danger-button" prefWidth="130"/>
    </HBox>

</VBox>
